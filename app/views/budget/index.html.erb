<h1 style="text-align:center;"><%= link_to '<', budget_show_by_month_path(@previous_month) %> Budget für <%= l(@monthname, format: "%B") %> <%= link_to '>', budget_show_by_month_path(@next_month) %></h1>
	<table>
		<tr><th>Geplant</th><th>Tatsächlich</th></tr>
		<tr><td style="width:50%;vertical-align:top">
			
	<table style="width:100%">

	<% @categories.each do |category| %>
	  <tr>
	    <td><%= link_to category.name, budget_show_by_category_path(@month, category.id) %></td>
	    <td style="text-align: right;"><%= number_to_currency(@planned_incomes[category.id]) %></td>
		<td style="text-align: right;"><%= number_to_currency(@planned_expenses[category.id]) %></td>
	  </tr>
	<% end %>
	
	<tr style="font-weight: bold;">
		<hr>
		<td>Gesamt:</td>
		<td style="font-weight: bold;text-align: right;"><%= number_to_currency(@total_planned_incomes) %></td>
		<td style="font-weight: bold;text-align: right;"><%= number_to_currency(@total_planned_expenses) %></td>
	</tr>
</table>
</td>
<td style="width:50%;vertical-align:top">
	<table  style="width:100%">

	<% @categories.each do |category| %>
	  <tr>
	    <td><%= category.name %></td>
    <td style="text-align: right;"><%= number_to_currency(@incomes[category.id]) %></td>
	<td style="text-align: right;"><%= number_to_currency(@expenses[category.id]) %></td>
	  </tr>
	<% end %>
	
	<tr style="font-weight: bold;">
		<hr>
		<td>Gesamt:</td>
		<td style="font-weight: bold;text-align: right;"><%= number_to_currency(@total_incomes) %></td>
		<td style="font-weight: bold;text-align: right;"><%= number_to_currency(@total_expenses) %></td>
	</tr>
</table>
</td>
</tr>
</table>