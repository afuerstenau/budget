<p id="notice"><%= notice %></p>

<h1>Planned Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
	  <th>Date</th>
      <th>Months</th>
      <th>Repeat yearly</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plannedtransactions.each do |plannedtransaction| %>
      <tr>
        <td><%= plannedtransaction.name %></td>
        <td><%= plannedtransaction.amount %></td>
		<td><%= plannedtransaction.date %></td>
        <td><%= plannedtransaction.months %></td>
        <td><%= plannedtransaction.repeat_yearly %></td>
        <td><%= Category.find(plannedtransaction.category).name %></td>
        <td><%= link_to 'Edit', edit_plannedtransaction_path(plannedtransaction) %></td>
        <td><%= link_to 'Destroy', plannedtransaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Planned Transaction', new_plannedtransaction_path %>
